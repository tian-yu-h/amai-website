---
import { Image } from "astro:assets";
import profilePick from "../../../assets/images/2021-headshot_tian-yu2055.jpeg";
import FormattedDate from "../../FormattedDate.astro";

interface Props {
  pubDate: Date;
  readingTimeMin: number;
  authorName: string;
}

const { pubDate, readingTimeMin, authorName } = Astro.props;
---

<div class="py-6 border-b border-skin-line mb-8">
  <!-- 1. REMOVED SOCIAL ICONS (X, LinkedIn, Reddit) -->

  <div class="flex items-center gap-4 mt-2">
    <!-- 2. CIRCULAR IMAGE FIX -->
    <div class="relative w-14 h-14 rounded-full overflow-hidden border-2 border-skin-line shadow-sm bg-skin-card shrink-0">
      <Image 
        src={profilePick} 
        alt={authorName} 
        class="!block !w-full !h-full !max-w-none object-cover scale-100" 
        style="object-position: 50% 10%;"
      />
    </div>

    <div class="flex flex-col">
      <span class="text-base font-bold text-skin-accent">{authorName}</span>
      <div class="flex items-center gap-2 text-sm text-skin-muted font-mono">
        <span class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-70"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
          <FormattedDate date={pubDate} />
        </span>
        <span>â€¢</span>
        <span class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-70"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
          {readingTimeMin} min read
        </span>
      </div>
    </div>
  </div>
</div>


